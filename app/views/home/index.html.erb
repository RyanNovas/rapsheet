<div class="text-right" style="padding-right: 10px;">
  <% if user_signed_in? %>
    <div class="login">
      Logged in as <strong><%= current_user.username %></strong><br>
      <%= link_to 'Edit profile | ', edit_user_registration_path %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
  <% else %>
    <div class="login">
      <%= link_to "Sign Up | ", new_user_registration_path %>
      <%= link_to "Login", new_user_session_path %>
    </div>
  <% end %>
</div>

<div class="container" style="position: relative; width: 85%; height: 85%;">


  <div class="jumbotron" >

    <div class="row">
      <div class="col-xs-12 col-md-3" >
        <b>Select Crime Rate</b><br/>
        <%= render "home/form" %>
      </div>
      <div class="container col-xs-12 col-md-9" style="position: relative; width: 75%; height: 85%;">
        <label for="year">Year</label>
        <input type="range" min="1965" max="2012" value="1965" id="fader" step="1" oninput="outputUpdate(value)">
        <output for="fader" id="year">1965</output>
      </div>

    </div>

    <div class="row">
      <div class="holding_div"></div>
      <div class="col-xs-9" id="map-container"></div>
    </div>
  </div>
</div>
